{
  "name": "template-repos-ts",
  "version": "1.0.0",
  "description": "Template repository for using TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "",
    "lint": "npm run lint:eslint && npm run lint:format",
    "lint:eslint": "eslint . --ext .ts,.js --fix --ignore-pattern node_modules/",
    "lint:format": "prettier --write '**/*.{js,json,md,yml}'"
  },
  "author": "",
  "license": "MPL-2.0",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-config-xo-typescript": "^0.21.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "prettier": "^1.19.1",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
